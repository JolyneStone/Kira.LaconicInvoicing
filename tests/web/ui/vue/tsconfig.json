{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "node",
      "jquery"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "pretty": true
  }
}
